@{
    Layout = "";
}
<head>
    <link href="~/Content/indique.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<div class="tela">

    <a id="voltar" style="color: white;" href="@Url.Action("GoIndex")">VOLTAR</a>

    <div class="gambi">

    </div>
    <div class="gambi2"></div>

    @if (ViewBag.Mensagem != null)
    {
        <div class="alert alert-success">@ViewBag.Mensagem</div>
    }

    <form method="post" action="@Url.Action("CreateProd")">
        <div class="caixa">
            <h1>Indique</h1>

            <input type="hidden" name="Id" id="Id" />

            <div class="form-group">
                <label for="ProdNom">Nome</label>
                <input type="text" class="form-control" name="ProdNom" id="ProdNom" />
            </div>
            <div class="form-group">
                <label for="ProdBairro">Bairro</label>
                <input type="text" class="form-control" name="ProdBairro" id="ProdBairro" />
            </div>
            <div class="form-group">
                <label for="ProdEnd">Endereço</label>
                <input type="text" class="form-control" name="ProdEnd" id="ProdEnd" />
            </div>
            <div class="form-group">
                <label for="ProdNum">Número</label>
                <input type="text" class="form-control" name="ProdNum" id="ProdNum" />
            </div>
            <div class="form-group">
                <label for="ProdTel">Telefone</label>
                <input type="text" class="form-control" name="ProdTel" id="ProdTel" placeholder="(xx) xxxxx-xxxx">
            </div>

            <div class="form-group">
                <label for="ProdReg">Regiões</label>
                <select class="form-control" name="ProdReg" id="ProdReg">
                    <option value="1">Zona Sul</option>
                    <option value="2">Zona Norte</option>
                    <option value="3">Zona Leste</option>
                    <option value="4">Zona Oeste</option>
                    <option value="5">Centro</option>
                </select>
            </div>
            <div class="form-group">
                <label for="ProdDesc">Descrição do Produtor</label>
                <textarea class="form-control" name="ProdDesc" id="ProdDesc" rows="3" maxlength="400"></textarea>
            </div>  

            <div>
                <div>
                    <label for="exampleFormControlTextarea1">Tipo de produtos</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="ProdFrut" name="ProdFrut" value="1">
                    <label class="form-check-label" for="ProdFrut">Frutas</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="ProdVerd" name="ProdVerd" value="1">
                    <label class="form-check-label" for="ProdVerd">Verduras</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="ProdLeg" name="ProdLeg" value="1">
                    <label class="form-check-label" for="ProdLeg">Legumes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="ProdOutr" name="ProdVerd" value="1">
                    <label class="form-check-label" for="ProdOutr">Outros</label>
                </div>
            </div>


            <br />
            <div class="botao">
                <button type="submit">Indicar</button>
            </div>
        </div>
    </form>

    <br />
    <br />
</div>


<script src="~/assets/js/bootstrap.js" type="text/javascript"></script>
<script src="~/assets/js/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="~/assets/js/jquery.mask.min.js" type="text/javascript"></script>
<script src="~/assets/js/validate/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/assets/js/validate/additional-methods.min.js" type="text/javascript"></script>
<script src="~/assets/js/validate/messages_pt_BR.min.js" type="text/javascript"></script>
<script type="text/javascript">
    jQuery.validator.setDefaults({
        success: "valid"
    });

    $("#IndForm").validate({
        rules: {
            ProdNom: {
                required: true,
                minlength: 5
            },

            ProdBairro: {
                required: true
            },

            ProdEnd: {
                required: true
            },

            ProdNum: {
                required: true
            },

            ProdTel: {
                required: true
            },
            ProdDesc: {
                required: true,
                maxlength: 400
            }

        }
    })
</script>
